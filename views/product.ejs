<%- include('./partials/head') %>
<%- include('./partials/header') %>
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= products[0].nombre %></h2> 
			<p class="product-detail-description"><a href="/product/add">Editar</a></p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src=<%= products[0].imagen %> alt="" class="product-detail-img">
					<p class="product-detail-description"><%= products[0].descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < comments.length; i++ ) { %>
							<article>
									<img src=<%= comments[i].fotoDePerfil %> alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="profile.html"><%= comments[i].usuario %>: </a> </strong>
									<%= comments[i].comentario %></p>
								</div>
							</article>
						<% } %>

					</section>
					<form class="form" action="/product" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<%- include('./partials/footer') %>
	

