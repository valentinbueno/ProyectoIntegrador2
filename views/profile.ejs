<%- include('./partials/head') %>
<%- include('./partials/header') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src=<%=  %> alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= locals.usuario.usuario %> 
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="/users/profile">SEGUIR</a>
				</div>
				<div>
					<ul>
						<li>Email: <%= locals.usuario.mail %></li>
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1 class="products-title">Mis Productos</h1>
			</div>
			<!-- Show the "ultimos" products -->

			<% for (let i=0; i<8; i++) {%>

			<div class="col-12 col-sm-6 col-lg-3">
				

				<section class="product-box">
					<a href="/product">
						<figure class="product-box_image">
							<img class= 'img-ind' src=<%=  %>>
						</figure>
						<article class="product-box_data">
							<h2><%= %></h2>
							<p>10 usuarios consultaron por tu producto</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
	<!-- /Mis productos -->

	<%- include('./partials/footer') %>
	
