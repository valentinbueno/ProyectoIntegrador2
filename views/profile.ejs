<%- include('./partials/head') %>
<%- include('./partials/header') %>

	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<%if (datosUsuario.foto_de_perfil == '') {%>
					<img src="/images/users/predet.png" alt="foto de perfi" class="foto-perfil">
				<%} else {%>
					<img src=<%=datosUsuario.foto_de_perfil%> alt="foto de perfil" class="foto-perfil">
				<%}%>
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= datosUsuario.usuario %>
						<% if (locals.usuario!=undefined ) { %>
							<% if (locals.usuario.id == datosUsuario.id) { %>
								<a href="/users/edit">
									<i class="fas fa-cog"></i>
								</a>
							<% } %>
						<% } %>	 
						
					</h1>
					<a class="btn mt-3 ml-4" href="/users/profile">SEGUIR</a>
				</div>
				<div>
					<ul>
						<li>Email: <%= datosUsuario.mail %></li>
						<li>Productos: <%= datosUsuario.productos.length %></li>
						<li>Comentarios: <%= datosUsuario.comentarios.length %></li>




					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->



	<!-- /Mis productos -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1 class="products-title">Mis Productos</h1>
			</div>
			<!-- Show the "ultimos" products -->


			<% for (let i=0; i<datosUsuario.productos.length; i++) {%>

			<div class="col-12 col-sm-6 col-lg-3">
				

				<section class="product-box">

					<a href="/product/id/<%=datosUsuario.productos[i].id%>">

						<figure class="product-box_image">
							<img class= 'img-ind' src=<%= datosUsuario.productos[i].imagen %>>
						</figure>
						<article class="product-box_data">
							<h2><%= datosUsuario.productos[i].nombre%></h2>
							<p><%= datosUsuario.productos[i].nombre%></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
	<!-- /Mis productos -->

	<%- include('./partials/footer') %>
	
