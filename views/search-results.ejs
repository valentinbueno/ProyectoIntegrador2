			<div class="col-12">
				<h1 class="products-title">Resultado de busqueda:</h1>
			</div>
			<!-- Show the "ultimos" products -->

			
	<%  if (productos.length==0) {%><div class="col-12 col-sm-6 col-lg-3">
					

